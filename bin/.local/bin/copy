#!/usr/bin/env bash
#
# Copy text to clipboard (cross-platform)
# Usage: copy [text]

# Join all arguments and copy to clipboard without newline
if command -v pbcopy >/dev/null; then
  printf "%s" "$*" | tr -d "\n" | pbcopy
elif command -v wl-copy >/dev/null; then
  printf "%s" "$*" | tr -d "\n" | wl-copy
elif command -v xclip >/dev/null; then
  printf "%s" "$*" | tr -d "\n" | xclip -selection clipboard
else
  printf "Error: no clipboard tool found (pbcopy, wl-copy, xclip)\n" >&2
  exit 1
fi
